<h1>Books</h1>
<% @book.each do |book| %>

<p>title</p>
<span>
    <%= link_to book.title, book_path(book.id) %>
</span>

<% end %>

<h2>New Book</h2>
<%= form_with model: @book_new, url: '/books', method: :post do |f| %>
<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>